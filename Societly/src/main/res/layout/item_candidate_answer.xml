<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="@dimen/padding_result_item_edge"
        android:paddingTop="@dimen/padding_candidate_overview_question_top"
        android:paddingBottom="@dimen/padding_candidate_overview_question_bottom">

        <mobi.lab.societly.ui.TypefaceTextView
            style="@style/TextView.Result.Secondary"
            android:id="@+id/text_question_position"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:minWidth="@dimen/width_question_position"
            android:gravity="left|center_horizontal"
            android:layout_marginLeft="@dimen/padding_question_position_left"
            android:layout_marginRight="@dimen/padding_question_position_right" />

        <mobi.lab.societly.ui.TypefaceTextView
            style="@style/TextView.Result.Comparison.Question"
            android:id="@+id/text_question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_answers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_result_item_edge"
        android:paddingRight="@dimen/padding_result_item_edge">

        <mobi.lab.societly.ui.TypefaceTextView
            style="@style/TextView.Result.Comparison.Answer"
            android:id="@+id/text_user_answer"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/padding_answers_middle"/>

        <mobi.lab.societly.ui.TypefaceTextView
            style="@style/TextView.Result.Comparison.Answer"
            android:id="@+id/text_candidate_answer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />

    </LinearLayout>
</LinearLayout>
