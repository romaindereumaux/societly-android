<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/btn_blue"
    android:gravity="center"
    android:minHeight="@dimen/height_spinner_item"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/margin_default_5">

    <!--paddingLeft is used to align the text to the center. This will level out the width of drawableRight-->

    <mobi.lab.societly.ui.TypefaceTextView
        style="@style/TextLarge.Spinner"
        android:id="@android:id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_expand_more"
        android:textColor="@android:color/white"
        android:gravity="center" />

</LinearLayout>