<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorPrimaryDark">@color/color_primary</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorAccent">@color/color_primary</item>
    </style>

    <style name="AppTheme.White">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="QuestionHint" parent="TextLarge.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/height_question_hint</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:background">@drawable/bg_hint_label</item>
        <item name="android:alpha">0</item>
        <item name="font">@string/font_bold</item>
    </style>

    <style name="QuestionHint.Top">
        <item name="android:layout_marginLeft">@dimen/padding_question_top_hint_leftright</item>
        <item name="android:layout_marginRight">@dimen/padding_question_top_hint_leftright</item>
        <item name="android:layout_marginTop">@dimen/padding_question_top_hint_top</item>
    </style>

    <style name="Question" parent="TextLarge">
        <item name="android:gravity">left</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_question_card</item>
        <item name="android:lineSpacingExtra">@dimen/text_question_card_spacing_extra</item>
        <item name="android:layout_marginLeft">@dimen/padding_question_text_leftright</item>
        <item name="android:layout_marginRight">@dimen/padding_question_text_leftright</item>
        <item name="android:layout_marginTop">@dimen/padding_question_text_topbottom</item>
        <item name="android:layout_marginBottom">@dimen/padding_question_text_topbottom</item>
    </style>

    <style name="Tutorial" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">@dimen/text_question_card</item>
        <item name="android:lineSpacingExtra">@dimen/text_question_card_spacing_extra</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="font">@string/font_light</item>
    </style>

    <style name="Tutorial.Hint" parent="Tutorial">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:singleLine">true</item>
        <item name="font">@string/font_bold</item>
    </style>

    <style name="Tutorial.Hint.Rotated">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/height_tutorial_hint</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="TextLarge.Light">
        <item name="android:textColor">@color/text_light_primary</item>
    </style>

    <style name="TextSmall.Light">
        <item name="android:textColor">@color/text_light_primary</item>
    </style>

    <style name="TextSmall.Dark">
        <item name="android:textColor">@color/text_dark_primary</item>
    </style>

    <style name="TextSmall.Dark.Secondary">
        <item name="android:textColor">@color/text_dark_secondary</item>
    </style>

    <style name="TextSmall.Light.Secondary">
        <item name="android:textColor">@color/text_light_secondary</item>
    </style>

    <style name="TextMedium.Light">
        <item name="android:textColor">@color/text_light_primary</item>
    </style>

    <style name="TextMedium.Dark">
        <item name="android:textColor">@color/text_dark_primary</item>
    </style>

    <style name="TextMedium">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="font">@string/font_bold</item>
    </style>

    <style name="TextLarge">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:lineSpacingExtra">@dimen/text_large_spacing_extra</item>
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="font">@string/font_light</item>
    </style>

    <style name="TextSmall">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:lineSpacingExtra">@dimen/text_small_spacing_extra</item>
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="font">@string/font_regular</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="font">@string/font_regular</item>
    </style>

    <style name="Button">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="font">@string/font_bold</item>
    </style>

    <style name="Button.White">
        <item name="android:background">@drawable/bg_btn_white</item>
        <item name="android:textColor">@color/text_dark_primary</item>
    </style>

    <style name="Button.White.Small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Button.Blue">
        <item name="android:background">@drawable/bg_btn_blue</item>
        <item name="android:textColor">@color/text_light_primary</item>
    </style>

    <style name="Button.SignIn" parent="Button.White.Small">
        <item name="android:paddingLeft">@dimen/margin_default_2</item>
        <item name="android:paddingRight">@dimen/margin_default_2</item>
        <item name="android:textAllCaps">false</item>
        <item name="font">@string/font_regular</item>
    </style>

    <style name="Button.SignIn.Facebook">
        <item name="android:background">@drawable/bg_btn_facebook</item>
        <item name="android:drawableLeft">@drawable/ic_facebook</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.SignIn.Google">
        <item name="android:drawableLeft">@drawable/ic_google</item>
        <item name="android:textColor">#8a000000</item>
    </style>

    <style name="ToolbarButton" parent="Button.Blue">
        <item name="android:layout_width">@dimen/height_toolbar</item>
        <item name="android:layout_height">@dimen/height_toolbar</item>
        <item name="android:visibility">invisible</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@drawable/bg_light_toolbar_button</item>
    </style>

    <style name="ToolbarButton.Dark">
        <item name="android:background">@drawable/bg_white_item</item>
    </style>
    <style name="ToolbarButton.Dark.Previous">
        <item name="android:src">@drawable/ic_back_dark</item>
    </style>

    <style name="ToolbarButton.Dark.Next" parent="ToolbarButton.Dark.Previous">
        <item name="android:rotation">180</item>
    </style>

    <style name="ToolbarButton.Next" parent="ToolbarButton.Previous">
        <item name="android:rotation">180</item>
    </style>

    <style name="ToolbarButton.Previous">
        <item name="android:src">@drawable/ic_back_light</item>
    </style>

    <style name="TextView.Result.Primary" parent="TextMedium.Dark">
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">22sp</item>
        <item name="font">@string/font_light</item>
    </style>

    <style name="TextView.Result.Secondary" parent="TextSmall.Dark.Secondary">
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_result_description</item>
        <item name="font">@string/font_light</item>
    </style>

    <style name="TextView.Result.Secondary.Dark" parent="TextView.Result.Secondary">
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="android:ellipsize">end</item>
        <item name="font">@string/font_regular</item>
    </style>

    <style name="TextView.Result.Comparison" parent="TextMedium">
        <item name="android:textSize">@dimen/text_answer_comparison</item>
        <item name="android:lineSpacingExtra">0dp</item>

    </style>

    <style name="TextView.Result.Comparison.Answer">
        <item name="android:minHeight">@dimen/height_button</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView.Result.Divider" parent="TextTitle">
        <item name="android:paddingLeft">@dimen/padding_result_item_edge</item>
        <item name="android:paddingRight">@dimen/padding_result_item_edge</item>
        <item name="android:paddingTop">@dimen/padding_result_item_edge</item>
        <item name="android:paddingBottom">@dimen/margin_default_3</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="TextView.Result.Divider.Top">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">@dimen/margin_6</item>
    </style>

    <style name="TextView.Result.Comparison.Question">
        <item name="font">@string/font_light</item>
    </style>

    <style name="EditText" parent="TextMedium.Light">
        <item name="font">@string/font_light</item>
        <item name="android:paddingLeft">@dimen/padding_edge_email_edittext</item>
        <item name="android:paddingRight">@dimen/padding_edge_email_edittext</item>
        <item name="android:background">@drawable/bg_email_edittext</item>
        <item name="android:textColor">@color/text_light_primary</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@color/text_light_secondary</item>
    </style>

    <style name="EditText.Email">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:hint">@string/hint_email</item>
    </style>

    <style name="QuestionCard">
        <item name="android:layout_marginTop">@dimen/padding_question_outer_top</item>
        <item name="android:layout_marginRight">@dimen/padding_question_outer_leftright</item>
        <item name="android:layout_marginBottom">@dimen/padding_question_outer_bottom</item>
        <item name="android:layout_marginLeft">@dimen/padding_question_outer_leftright</item>
        <item name="cardElevation">@dimen/elevation_default_question_card</item>
        <item name="cardMaxElevation">@dimen/elevation_top_question_card</item>
        <item name="cardCornerRadius">@dimen/radius_card_corner</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="Divider.Signin" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:alpha">0.5</item>
        <item name="android:background">#d8d8d8</item>
    </style>

    <style name="Spinner.ResultLevel.Base" parent="">
        <item name="android:layout_marginLeft">@dimen/padding_result_item_edge</item>
        <item name="android:layout_marginRight">@dimen/padding_result_item_edge</item>
        <item name="android:layout_marginBottom">@dimen/margin_6</item>
        <item name="android:background">@drawable/shape_spinner_light</item>
        <item name="android:popupBackground">@drawable/bg_spinner_popup</item>
    </style>

    <style name="Spinner.ResultLevel" parent="Spinner.ResultLevel.Base">
        <!--No elevation anyway-->
    </style>

    <style name="TextLarge.Spinner" parent="TextLarge">
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">2</item>
        <item name="android:paddingTop">@dimen/margin_default_0</item>
        <item name="android:paddingBottom">@dimen/margin_default_0</item>
        <item name="android:paddingLeft">@dimen/margin_default</item>
        <item name="android:paddingRight">@dimen/margin_default</item>
        <item name="android:drawablePadding">@dimen/margin_default_2</item>
    </style>


    <style name="TextSmall.EmptyResults" parent="TextSmall.Dark.Secondary">
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:paddingTop">@dimen/margin_36</item>
        <item name="android:paddingBottom">@dimen/margin_default_2</item>
        <item name="android:paddingLeft">60dp</item>
        <item name="android:paddingRight">60dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
